<Window x:Class="数据绑定.DataContextSamples"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="数据上下文绑定实例" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <TextBlock Text="窗口的标题为："></TextBlock>
                <TextBlock Text="{Binding Title}"></TextBlock>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="窗口的宽度为："></TextBlock>
                <TextBox Text="{Binding Width}"></TextBox>
                <TextBlock Text="窗口的高度为："></TextBlock>
                <TextBox Text="{Binding Height}"></TextBox>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>