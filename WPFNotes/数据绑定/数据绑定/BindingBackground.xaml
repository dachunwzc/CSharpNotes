<Window x:Class="数据绑定.BindingBackground"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:数据绑定"
        mc:Ignorable="d"
        Title="BindingBackground" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="TxtBindingSource"></TextBox>
            <WrapPanel>
                <TextBlock Text="Value：" FontWeight="Bold"></TextBlock>
                <TextBlock x:Name="LbValue"></TextBlock>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
